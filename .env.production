# Production Environment Configuration

# App
VITE_APP_NAME=FestBook
VITE_APP_VERSION=1.0.0

# API
VITE_API_BASE_URL=https://api.festbook.com/api
VITE_API_TIMEOUT=30000

# Authentication
VITE_JWT_SECRET=production-jwt-secret-key-use-strong-key
VITE_JWT_EXPIRY=7d

# Payment Gateway - Live Keys
VITE_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx
VITE_RAZORPAY_KEY_SECRET=live_secret_key

# Email
VITE_SENDGRID_API_KEY=production-sendgrid-key
VITE_EMAIL_FROM=noreply@festbook.com

# Analytics
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_ENABLE_ANALYTICS=true

# Feature Flags
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_PAYMENT_GATEWAY=true
VITE_ENABLE_EMAIL_NOTIFICATIONS=true
VITE_ENABLE_SMS_NOTIFICATIONS=true

# Development
VITE_ENABLE_MOCK_API=false
VITE_ENABLE_DEBUG_MODE=false

# URLs
VITE_FRONTEND_URL=https://festbook.com
VITE_BACKEND_URL=https://api.festbook.com
